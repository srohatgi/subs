extends layout

block header_scripts
  script(src="javascripts/mbox.js")

block body_scripts
  script(src='javascripts/jquery.js')
  script
    (function() {
      var lfh = document.createElement('script'); lfh.type = 'text/javascript'; lfh.async = true;
      lfh.src = 'js/tnt.js'+window.location.search;
      var s = document.getElementsByTagName('head')[0]; s.appendChild(lfh);
    })();
  
  
block header
  header.row
    .two.columns
      img(src='/images/logo_netsuite.gif')
    .eight.columns
    .two.columns
      br 
      form
        input#search-field.input-text(type='text',placeholder='Search..')

block tabs
  .row
    .twelve.columns
      dl.tabs
        dd
          a(href="#",class="active") Products
        dd
          a(href="#") Customers
        dd
          a(href="#") Industries
        dd
          a(href="#") Solutions
        dd
          a(href="#") Platform
        dd
          a(href="#") Resources
        dd
          a(href="#") Company

block main
  .row
    article#main.eight.columns
        
      h3
        a(href="/auth/facebook") Login with Facebook
      p 
        | Trying out facebook login with passport
        
